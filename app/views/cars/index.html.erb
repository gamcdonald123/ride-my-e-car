    <% @cars.each do |car| %>
      <div class="col-lg-3">
        <div class="card shadow p-3" style="width: 18rem;">
          <img src="<%= car.image_url %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h3 class="card-title"> <%="#{car.make} #{car.model}" %> </h2>
            <ul class="list-unstyled">
              <li> Year: <%= car.year %> </li>
              <li>Rate: Â£<%=car.price %> </li>
              <%= link_to"View",car_path(car), class: "btn btn-dark" %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <div class="row">
        <% @cars.each do |car| %>
          <div class="col-lg-4 mb-4">
            <div class="card shadow p-3">
              <%= image_tag car.image_url, class: "card-img-top", style: "height: 9rem; object-fit: cover;" %>
              <div class="card-body">
                <h3 class="card-title"> <%="#{car.make} #{car.model}" %> </h2>

                <ul class="list-unstyled">
                  <li class="p-2"><%= car.year %> </li>
                  <li class="p-2"><%= number_to_currency(car.price.round(1), unit: "Â£")%>/day </li>
                  <%= link_to"View",car_path(car), class: "view-btn btn btn-dark px-5 mt-3" %>
                </ul>

              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div id="map"| class="col-lg-4 position-sticky" style="top 0";>
      <div style="width: 100%; height: 600px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
`</div>

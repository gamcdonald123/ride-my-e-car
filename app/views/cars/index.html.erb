<div class="header text-center">
<h3 class="p-3 bg-black bg-opacity-10 border border-start-0 rounded-end mb-3">List of Cars available to rent in your area:</h3>
</div>
<div class="container text-center">
  <div class="row d-flex">
    <% @cars.each do |car| %>
      <div class="col-lg-3 mb-4">
        <div class="card shadow p-3" style="width: 18rem;">
          <%# <%= image_tag car.image_url, class: "card-img-top", style: "height: 9rem; object-fit: cover;" %>
          <div class="card-body">
            <h3 class="card-title"> <%="#{car.make} #{car.model}" %> </h2>
            <ul class="list-unstyled">
              <li> Year: <%= car.year %> </li>
              <li>Rate: Â£<%=car.price %> </li>
              <%= link_to"View",car_path(car), class: "btn btn-dark" %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<h4>Find your car!</h4>
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

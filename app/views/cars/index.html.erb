<div class="header text-center">
<h3 class="p-3 bg-black bg-opacity-10 border border-start-0 rounded-end mb-3">List of Cars available to rent in your area:</h3>
</div>
<div class="container text-center">
  <div class="row" style="gap: 1rem;">
    <% @cars.each do |car| %>
      <div class="col-6 col-lg-3 card shadow p-3" style="width: 18rem;">
        <img src="https://i.guim.co.uk/img/media/7d5dfcdf7a70afe5273fa65590fdb99fdcda1a97/0_89_3000_1800/master/3000.jpg?width=1200&quality=85&auto=format&fit=max&s=d9a6fc098390afea29a96f4c59da2adc" class="card-img-top" alt="...">
        <div class="card-body">
          <h3 class="card-title"> <%="#{car.make} #{car.model}" %> </h3>
          <ul class="list-unstyled">
            <li> Year: <%= car.year %> </li>
            <li>Rate: Â£<%=car.price %> </li>
            <%= link_to"view & book",car_path(car), class: 'btn btn-primary' %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>

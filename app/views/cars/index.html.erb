<div class="container">
  <div class="row justify-content-center rounded">
  <div class="col-sm-8 my-3">
      <%= form_with url: cars_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control m-1",
              placeholder: "Search by make, model or location"
          %>
        <%= submit_tag "Search", name: "", class: "btn btn-dark m-1" %>
      <% end %>
  </div>
</div>
  <div class="row">
    <div class="col-lg-8">
      <div class="row">
        <% if @cars.count == 0 %>
          <div class="col-lg-12">
            <h3 class="text-center">No cars found</h3>
          </div>
        <% end %>
        <% @cars.each do |car| %>
          <div class="col-lg-4 mb-4">
            <div class="card shadow p-3">
              <% if car.photos.attached? %>
                <%= cl_image_tag(car.photos.first.key, :height => 300, :crop => :fit, :class => "card-img-top") %>
                <% else %>
              <%= image_tag("default_img.jpeg") %>
              <% end %>
              <div class="card-body">
                <h3 class="card-title"> <%="#{car.make} #{car.model}" %> </h2>

                <ul class="list-unstyled">
                  <li class="p-2"><%= car.year %> </li>
                  <% if car.price %>
                    <li class="p-2"><%= number_to_currency(car.price.round(1), unit: "Â£")%>/day </li>
                  <% end %>
                  <%= link_to"View",car_path(car), class: "view-btn btn btn-dark px-5 mt-3" %>
                </ul>

              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div id="map"| class="col-lg-4 position-sticky" style="top 0";>
      <div style="width: 100%; height: 600px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
`</div>
